<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.pxl.ievent.activities.AttendanceListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Toolbar
            android:id="@+id/tb_attendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:navigationIcon="@drawable/ic_arrow_back_black_24dp"
            android:title="Aanwezigheden"
            android:titleTextColor="@color/colorTextWhite"></Toolbar>

        <ListView
            android:layout_width="wrap_content"
            android:layout_below="@+id/tb_attendance"
            android:id="@+id/lv_attendance"
            android:layout_height="wrap_content"
            >

        </ListView>

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
